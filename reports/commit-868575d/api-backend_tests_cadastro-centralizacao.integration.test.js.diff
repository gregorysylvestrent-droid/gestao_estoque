+test('veiculos legados sao somente leitura e consomem base central da frota', async (t) => {
+  const server = await startServer();
+  t.after(async () => {
+    await server.stop();
+  });
+
+  const token = await login(server.baseUrl);
+  const authHeaders = {
+    Authorization: `Bearer ${token}`,
+    'Content-Type': 'application/json',
+  };
+
+  const blockedCreate = await fetch(`${server.baseUrl}/vehicles`, {
+    method: 'POST',
+    headers: authHeaders,
+    body: JSON.stringify({
+      plate: 'TST-0001',
+      model: 'Veiculo Teste',
+      type: 'Caminhao',
+    }),
+  });
+
+  assert.equal(blockedCreate.status, 403);
+  const blockedPayload = await blockedCreate.json();
+  assert.match(String(blockedPayload.error || ''), /Escrita bloqueada/i);
+
+  const blockedExternalFleetWrite = await fetch(
+    `${server.baseUrl}/fleet_vehicles?source_module=armazem`,
+    {
+      method: 'POST',
+      headers: authHeaders,
+      body: JSON.stringify({
+        placa: 'TST-9001',
+        desc_modelo: 'Modelo Bloqueado',
+      }),
+    }
+  );
+  assert.equal(blockedExternalFleetWrite.status, 403);
+
+  const allowedFleetWrite = await fetch(
+    `${server.baseUrl}/fleet_vehicles?source_module=gestao_frota`,
+    {
+      method: 'POST',
+      headers: authHeaders,
+      body: JSON.stringify({
+        placa: 'TST-9002',
+        desc_modelo: 'Modelo Permitido',
+      }),
+    }
+  );
+  assert.equal(allowedFleetWrite.status, 200);
+
+  const cleanupFleetWrite = await fetch(
+    `${server.baseUrl}/fleet_vehicles?source_module=gestao_frota&placa=TST-9002`,
+    {
+      method: 'DELETE',
+      headers: authHeaders,
+    }
+  );
+  assert.equal(cleanupFleetWrite.status, 200);
+
+  const fleetResponse = await fetch(`${server.baseUrl}/fleet_vehicles?limit=1`, {
+    headers: { Authorization: `Bearer ${token}` },
+  });
+  assert.equal(fleetResponse.status, 200);
+  const fleetPayload = await fleetResponse.json();
+  assert.equal(fleetPayload.error, null);
+
+  const legacyResponse = await fetch(`${server.baseUrl}/vehicles?source_module=armazem&limit=5`, {
+    headers: { Authorization: `Bearer ${token}` },
+  });
+  assert.equal(legacyResponse.status, 200);
+  const legacyPayload = await legacyResponse.json();
+  assert.equal(legacyPayload.error, null);
+  assert.ok(Array.isArray(legacyPayload.data));
+
+  if (Array.isArray(fleetPayload.data) && fleetPayload.data.length > 0 && legacyPayload.data.length > 0) {
+    assert.equal(
+      String(legacyPayload.data[0].plate || '').toUpperCase(),
+      String(fleetPayload.data[0].placa || '').toUpperCase()
+    );
+  }
+
+  const auditResponse = await fetch(
+    `${server.baseUrl}/audit_logs/search?module=armazem&entity=fleet_vehicles&action=lookup&limit=10`,
+    { headers: { Authorization: `Bearer ${token}` } }
+  );
+  assert.equal(auditResponse.status, 200);
+  const auditPayload = await auditResponse.json();
+  assert.equal(auditPayload.error, null);
+  assert.ok(Array.isArray(auditPayload.data));
+  assert.ok(auditPayload.data.length >= 1);
+});
